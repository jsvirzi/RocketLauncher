<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mam.lambo.rocketlauncher.MainActivity">

    <LinearLayout
        android:layout_width="250sp"
        android:layout_height="400sp"
        android:orientation="vertical">

        <CheckBox
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="auto launch nautobahn"
            android:id="@+id/autoLaunchNautobahn"
            />

        <CheckBox
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="auto launch fan"
            android:id="@+id/autoLaunchFan"
            />

        <Button
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="stop nautobahn"
            android:id="@+id/stopNautobahn"
            />

        <Button
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="start nautobahn"
            android:id="@+id/startNautobahn"
            />

        <Button
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="stop fan"
            android:id="@+id/stopFan"
            />

        <Button
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="start fan"
            android:id="@+id/startFan"
            />

        <Button
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="led"
            android:id="@+id/led"
            />

        <Button
            android:layout_width="200sp"
            android:layout_height="40sp"
            android:text="exit"
            android:id="@+id/exit"
            />

    </LinearLayout>

</RelativeLayout>
