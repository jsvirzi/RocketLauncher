<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mam.lambo.rocketlauncher.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250sp"
            android:layout_height="500sp"
            android:orientation="vertical">

            <Button
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="fan speed tests"
                android:id="@+id/fanSpeed"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="auto launch nautobahn"
                android:id="@+id/autoLaunchNautobahn"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="auto launch distraction"
                android:id="@+id/autoLaunchDistraction"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="auto launch imulogger"
                android:id="@+id/autoLaunchImuLogger"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="nautobahn night mode"
                android:id="@+id/nightModeNautobahn"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="nautobahn 1920x1080"
                android:id="@+id/hdModeNautobahn"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="external dnn"
                android:id="@+id/externalDnn"
                />

            <CheckBox
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="internal dnn"
                android:id="@+id/internalDnn"
                />

            <Button
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="start fan"
                android:id="@+id/startFan"
                />

            <Button
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="stop fan"
                android:id="@+id/stopFan"
                />

            <TextView
                android:layout_width="200sp"
                android:layout_height="40sp"
                android:text="status"
                android:id="@+id/status"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80sp"
            android:layout_height="400sp"
            android:orientation="vertical">

            <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="save"
                android:id="@+id/save"
                />

            <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="start"
                android:id="@+id/start"
                />

            <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="led"
                android:id="@+id/led"
                />

            <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="ir led"
                android:id="@+id/irLed"
                />

            <Button
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:text="exit"
                android:id="@+id/exit"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
